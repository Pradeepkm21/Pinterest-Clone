<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinterest Clone</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="stylesheet" href="/stylesheets/nav.css">
    
  </head>

  <body>
    <% include nav.ejs %>
    <div class="containertpr">
      <div class="cardtpr" id="bg">
        <div hidden >
          <form id="uploadForm" action="/displayPicture" method="post" enctype="multipart/form-data">
            <input id="fileInput" type="file" name="profilePicture" accept="image/*" required>
            <button type="submit">Upload</button>
          </form>
        </div>
          <div class="profile-picture" id="profilePictureContainer">
            <a href="#" id="uploadTrigger">
              <img src="/images/uploads/<%= user.dp %>" alt="Profile Picture">
            </a>
          </div>
      </div>

      <div class="cardtpr" id="pp">
        <h2 class="name"><%=user.fullname%></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline">Keep going.</p>
        <p class="description">web developer</p>
        <a href="/logout" class="bttn">Logout</a>
      </div>
      <div class="file-upload-container ">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="file" name="file" accept="image/*" required>
          <input type="text" name="imagecaption" placeholder="Some Caption" required>
          <button type="submit">Upload</button>
        </form>
      </div>
    </div>

    <div class="containers">
        <% user.posts.forEach(function(post){ %>
            <div class="box">
              <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="loading..">
              <div class="caption">
                <%= post.imageText %>
              </div>
            </div> 
        <%})%>
    </div>
    <script>
      document.querySelector("#uploadTrigger").addEventListener('click', function () {
        document.querySelector("#fileInput").click(); // Trigger the file input when the user clicks on the profile picture
      });

      document.querySelector("#fileInput").addEventListener('change', function () {
        // Submit the form when a file is selected
        document.querySelector("#uploadForm").submit();
      });

      // Add a click event to the profile picture container to open the file input dialog
      
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>